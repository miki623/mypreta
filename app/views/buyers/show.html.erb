<div class="item-show">
  <div class="seller-header">
    <div class="seller-header-name">
      <%= @buyer.nickname %>さんのページ
    </div>
    <div class="seller-header-text">
      購入履歴一覧
    </div>
  </div>

  <div class="seller-item-box">
    <ul class='item-lists'>
      <% @deals.each do |deal| %>
        <li class='seller-list'>
          <div class="seller-item">
            <div class='seller-item-image'>
              <%= image_tag deal.item.image, class: "seller-item-img" %>
            </div>
            <div class="seller-item-right">
              <div class="seller-item-overview">
                <%= deal.item.overview %>
              </div>
              <div class="seller-item-info">
                <%= deal.item.info %>
              </div>
              <div class="seller-item-bottom">
                <div class=seller-item-category>
                  <%= deal.item.category.name %>
                </div>
                <div class="seller-item-price">
                  <div class="seller-item-bottom-price">
                    ¥<%= deal.item.price %>
                  </div>
                  <div class="seller-item-deliveryfee">
                    <%= deal.item.delivery_fee.name %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
      <div class="item-info-wrapper">
        <div class="fotter-link">
          <%= link_to "TOPページへ戻る", root_path, class: "footer-link-content" %>
        </div>
      </div>
</div>


